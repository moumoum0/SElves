<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 文件访问权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" 
        tools:ignore="ScopedStorage" />
    
    <!-- 位置权限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    
    <!-- 前台服务权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    
    <!-- 精确闹钟权限（Android 12+需要，用于自动重启功能） -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    
    <!-- 查询其他应用包信息权限（Android 11+需要，用于检测地图应用） -->
    <uses-permission android:name="android.permission.QUERY_PACKAGES" />
    
    <!-- 中国工信部规范：获取应用列表权限（YD/T 2407-2021标准要求） -->
    <!-- 适用于所有在中国销售的Android设备，不仅限于小米 -->
    <uses-permission android:name="com.android.permission.GET_INSTALLED_APPS" />
    
    <!-- 查询特定应用包（Android 11+需要，明确声明要检测的地图应用） -->
    <queries>
        <!-- 高德地图 -->
        <package android:name="com.autonavi.minimap" />
        <!-- 百度地图 -->
        <package android:name="com.baidu.BaiduMap" />
        <!-- 腾讯地图 -->
        <package android:name="com.tencent.map" />
        <!-- Google地图 -->
        <package android:name="com.google.android.apps.maps" />
        
        <!-- 通用地图意图查询 -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="geo" />
        </intent>
    </queries>

    <application
        android:name=".ChatApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Selves"
        tools:targetApi="31"
        android:requestLegacyExternalStorage="true">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Selves"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 图片裁剪Activity，需要AppCompat主题 -->
        <activity
            android:name="com.canhub.cropper.CropImageActivity"
            android:theme="@style/Theme.Selves.Crop" />

        <!-- 位置跟踪服务 -->
        <service
            android:name=".service.LocationTrackingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- 自动重启接收器 -->
        <receiver
            android:name=".service.AutoRestartReceiver"
            android:exported="false" />

    </application>

</manifest>